<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="600.0" prefWidth="800.0" styleClass="root-pane" stylesheets="@../PageStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oopproject.rpmsfinal.PatientControllers.PanicController">

    <VBox alignment="TOP_CENTER" spacing="0">

        <!-- Top Bar -->
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="top-bar">
            <Button fx:id="backButton" onAction="#goBackHome" styleClass="back-button" text="&gt; Back" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>

        <!-- Main Content Area -->
        <StackPane prefHeight="498.0" prefWidth="800.0" styleClass="content-stack" VBox.vgrow="ALWAYS">
            <VBox alignment="TOP_CENTER" spacing="30" styleClass="center-content">

                <VBox alignment="CENTER" spacing="15" styleClass="info-card">
                    <Label styleClass="page-title" text="Your Vitals" />
                </VBox>

                <VBox alignment="CENTER" prefHeight="350.0" spacing="15" styleClass="info-card">
               <children>
                  <HBox alignment="CENTER" prefHeight="42.0" prefWidth="700.0">
                     <children>
                        <TextField fx:id="temperature" promptText="Temperature" />
                        <HBox prefHeight="42.0" prefWidth="118.0" />
                        <TextField fx:id="heartRate" promptText="HeartRate" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="30.0" layoutY="164.0" prefHeight="42.0" prefWidth="700.0">
                     <children>
                        <TextField fx:id="systolicBP" promptText="Systolic BP" />
                        <HBox prefHeight="42.0" prefWidth="118.0" />
                        <TextField fx:id="diastolicBP" promptText="Diastolic BP" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="30.0" layoutY="192.0" prefHeight="42.0" prefWidth="700.0">
                     <children>
                        <TextField fx:id="respirationRate" promptText="Respiration Rate" />
                        <HBox prefHeight="42.0" prefWidth="118.0" />
                        <TextField fx:id="oxygenSaturation" promptText="Oxygen Saturation" />
                     </children>
                  </HBox>
                  <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddButton" styleClass="card-button" text="Add" />
                  <Button fx:id="csvUploadButton" mnemonicParsing="false" onAction="#handleCsvUpload" styleClass="card-button" text="CSV Upload" />
                  <Text fx:id="vitalsText" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" />
               </children>
                </VBox>

            </VBox>
        </StackPane>

    </VBox>
</StackPane>
