<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="600.0" prefWidth="800.0" styleClass="user-type-background" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oopproject.rpmsfinal.UserTypeController">

    <VBox alignment="CENTER" maxHeight="400.0" maxWidth="400.0" prefHeight="359.0" prefWidth="372.0" spacing="20" styleClass="user-type-card">

        <Label styleClass="user-title" text="Select User" />
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
            <children>
                <VBox alignment="CENTER" prefHeight="100.0" prefWidth="118.0">
                    <children>
                        <Button fx:id="patientButton" mnemonicParsing="false" onAction="#handlePatientButton" styleClass="user-button" stylesheets="@UserType.css" text="Patient" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="100.0" prefWidth="118.0">
                    <children>
                        <Button fx:id="doctorButton" mnemonicParsing="false" onAction="#handleDoctorButton" styleClass="user-button" stylesheets="@UserType.css" text="Doctor" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="100.0" prefWidth="118.0">
                    <children>
                        <Button fx:id="adminButton" mnemonicParsing="false" onAction="#handleAdminButton" styleClass="user-button" stylesheets="@UserType.css" text="Admin" />
                    </children>
                </VBox>
            </children>
        </HBox>

    </VBox>
    <stylesheets>
        <URL value="@UserType.css" />
    </stylesheets>

</StackPane>
